}

.detail-page {
  width: 100%;
  height: 100%;
  min-height: 300px;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.map {
  flex: 1;
  width: 100%;
}

.map-action {
  position: absolute;
  top: 0;
  width: 100%;
  padding: 10rpx 30rpx;
}

.text-right {
  text-align: right;
}

.map-content {
  width: 100%;
  height: 200px;
  flex-direction: column;
}