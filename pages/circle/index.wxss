/* pages/ranking/index.wxss */
.page {
  min-height: 100vh;
}


.weui-tabs-bar__wrp {
  border-bottom: 10px solid #eee;
  margin-top: 10px;
}

.weui-tabs-swiper {
  width: 100%;
  height: 100px;
}

.tab-bar-title__selected {
  font-size: 20px;
  font-weight: bold;
}

.tab-content {
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  box-sizing: border-box;
}

.weui-tabs-bar__title {
  margin: 0px 50px;
}

.icon-box {
  display: flex;
  width: 100%;
  justify-content: space-around;
}

.item {
  background-color: #10AEFF;
  color: white;
  padding: 0px 6px;
  border-radius: 30px;
  height: 60px;
  width: 60px;
  line-height: 60px;
  box-sizing: border-box;
}

.btn {
  height: 40px;
}