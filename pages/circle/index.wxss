/* pages/circle/index.wxss */
.weui-tabs-bar__wrp {
  padding: 8px;
  background: var(--weui-BG-2) !important;
  border-bottom: 1px solid var(--weui-BG-2);
}

.weui-tabs-bar__title {
  margin: 0px 10px;
}

.tab-bar-title__selected {
  font-size: 20px;
  font-weight: bold;
}

.tab-content {
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  box-sizing: border-box;
  padding: 40rpx;
}

.tab-content__hd,
.tab-content__bd {
  width: 100%;
}

.weui-media-box__add {
  position: absolute;
  top: 16px;
  right: 16px;
  padding: 0px 10px;
  background-color: #07c160;
  border-radius: 9px;
}

.weui-media-box__desc_place {
  width: 90%;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

button {
  margin-top: 30rpx;
  margin-bottom: 30rpx;
}

.block {
  width: 100% !important;
}

.flag {
  transform: rotate(45deg) translateX(50%);
  text-align: center;
  display: inline-block;
  position: absolute;
  top: 0px;
  right: 20px;
}

.popup-page {
  width: 100%;
  min-height: 300px;
  padding: 30rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  box-sizing: border-box;
}

.popup-title {
  color: var(--weui-FG-0);
  margin-bottom: 80rpx;
  font-size: 17px;
  line-height: 1.4;
}