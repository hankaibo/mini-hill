<!--pages/find/index.wxml-->
<view class="page" data-weui-theme="{{theme}}">
	<mp-tabs tabs="{{tabs}}" swiperClass="weui-tabs-swiper" activeClass="tab-bar-title__selected"
		tabActiveTextColor="#07c160" activeTab="{{activeTab}}" tabBackgroundColor="{{theme==='dark'?'#191919':'#ffffff'}}"
		tabInactiveTextColor="{{theme==='dark'?'hsla(0,0%,100%,.5)':'#000000'}}" bindtabclick="onTabCLick"
		bindchange="onChange">
		<!-- 活动圈 -->
		<view class="tab-content" slot="tab-content-0">
			<mp-cells>
				4444444444444444444444444
				<mp-cell wx:for="{{playList}}" wx:key="id" hover value="{{item.name}}">
					1111111111111{{item.startTime}}222222222222222222222
					<image slot="icon" src="{{item.imgUrl}}" alt="封面"
						style="margin-right: 16px;vertical-align: middle;width:120px; height: 120px;" />
					<view class="weui-media-box__bd">
						<h4 class="weui-media-box__title">{{item.startTime}}</h4>
						<view class="weui-media-box__desc">{{item.place}}</view>
					</view>
				</mp-cell>
			</mp-cells>
		</view>

		<view class="tab-content" slot="tab-content-1">
		</view>
	</mp-tabs>
</view>